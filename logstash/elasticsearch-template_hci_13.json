{
	"template" : "logstash-*",
	"version" : 50002,
	"settings" : {
		"index.refresh_interval" : "5s",
		"index.codec": "best_compression"
	},
	"mappings" : {
		"_default_" : {
			"_all" : {"enabled" : true, "norms" : false},
			"dynamic_templates" : [ {
				"message_field" : {
					"path_match" : "message",
					"match_mapping_type" : "string",
					"mapping" : {
						"type" : "text",
						"norms" : false
					}
				}
			}, {
				"string_fields" : {
					"match" : "*",
					"match_mapping_type" : "string",
					"mapping" : {
						"type" : "text", "norms" : false
					}
				}
			} ],
			"properties" : {
				"@timestamp": { "type": "date", "include_in_all": false },
				"@version": { "type": "keyword", "include_in_all": false },
				"geoip"	: {
					"dynamic": true,
					"properties" : {
						"ip": { "type": "ip" },
						"location" : { "type" : "geo_point" },
						"latitude" : { "type" : "half_float" },
						"longitude" : { "type" : "half_float" }
					}
				}
			}
		},
		"wlserver": {
			"properties" : {
				"Wls_MessageId": {
					"type" : "keyword"
				}
			}
		},
		"osblog": {
			"properties" : {
				"Osb_Code": {
					"type" : "keyword"
				},
				"Osb_ManagedServer": {
					"type" : "text",
					"fields" : {
						"raw" : {"type": "keyword"}
					}
				}
			}
		},
		"apache_access" : {
			"properties" : {
				"Apache_RemoteIp": { "type": "ip" },
				"Apache_RequestUri": {
					"type" : "text",
					"fields" : {
						"raw" : {"type": "keyword"}
					}
				},
				"Apache_VirtualHost": {
					"type" : "text",
					"fields" : {
						"keyword" : {"type": "keyword"}
					}
				},
				"Apache_JSESSIONID": {
					"type" : "keyword"
				},
				"geoip"	: {
					"properties" : {
						 "coordinates" : { "type" : "geo_point", "doc_values" : true }
					}
				},
				"HCITRACE": {
					"type" : "keyword"
				}
			}
		}
	}
}
